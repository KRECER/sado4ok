//- Все примеси в этом файле должны начинаться c имени блока (menu)

mixin menu(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +menu('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' menu--' + modsList[i].trim();
      }
    }

  .menu(class=allMods)&attributes(attributes)
    .menu__list
      a.menu__item(href='#') Вхід
      a.menu__item(href='#') Реєстрація
      button.menu__btn
        svg.menu__icon-burger(width='24', height='24'): use(xlink:href='img/sprite.svg#icon-burger')
